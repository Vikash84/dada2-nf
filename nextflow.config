process.conda = "$baseDir/environment.yaml"

params {
    reads = ''
    results = 'results'
    phred = 33
    pairedEnd = true
    help=false
}

profiles {
    standard {
        params { 
            silva_db = ''
            silva_specie_db = ''
        }   

        executor {
            name = 'local'
        }

        process {
            withLabel : 'dada' {
                cpus = 8
                memory = '16G'
            }
            withLabel : 'adaprem' {
                cpus = 8
                memory = '2G'
            }
            withLabel: 'ristretto' {
                cpus = 1
                memory = '1G'
            }
        }
    }

    shh {
        params {
            silva_db = '/projects1/users/borry/02_db/dada/silva_nr_v132_train_set.fa'
            silva_specie_db = '/projects1/users/borry/02_db/dada/silva_species_assignment_v132.fa'
        }

        executor {
            name = 'slurm'
            queueSize = 16
        }
        
        process {
            withLabel : 'dada' {
                cpus = 8
                memory = '16G'
                queue = 'short'
                time = '1h'
            }
            withLabel : 'adaprem' {
                cpus = 8
                memory = '2G'
                queue = 'short'
                time = '1h'
            }
            withLabel: 'ristretto' {
                cpus = 1
                memory = '1G'
                queue = 'short'
                time = '10m'
            }
        }
    }
    test {
        params {
            reads = "$baseDir/test/data/sample_R{1,2}.fastq.gz"
        }
    }

}